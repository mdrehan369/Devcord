generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String    @id @default(cuid())

  githubId        String    @unique
  github_username String
  username        String    @unique

  email           String?   @unique
  name            String?
  github_token    String?
  avatar          String?
  banner          String?
  boi             String?

  role            Role      @default(USER)
  projects        Project[]
  sessions        Session[]
  conversations   UserConversation[]
  Messages        Message[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  USER
  ADMIN
}

model Project {
  id          String     @id @default(cuid())
  name        String
  description String?
  icon        String?
  banner      String?
  repo        String  @unique


  ownerId String
  owner   User   @relation(fields: [ownerId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime

  user User @relation(references: [id], fields: [userId], onDelete: Cascade)
}


model Conversation {
  id              String          @id @default(cuid())
  name            String?         // Only used for group chats
  isPersonal      Boolean         @default(false) // true for personal chat, false for group chat

  messages        Message[]
  users           UserConversation[] // Track users in a conversation

  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
}

model UserConversation {
  userId          String
  conversationId  String
  joinedAt        DateTime        @default(now())

  user            User            @relation(fields: [userId], references: [id])
  conversation    Conversation    @relation(fields: [conversationId], references: [id])

  @@id([userId, conversationId])
  @@unique([userId, conversationId]) // Prevent a user from being in the same conversation multiple times
}

model Message {
  id              String             @id @default(cuid())
  content         String
  senderId        String
  conversationId  String
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  sender          User            @relation(fields: [senderId], references: [id])
  conversation    Conversation    @relation(fields: [conversationId], references: [id])
}
